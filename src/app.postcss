@import url('https://fonts.cdnfonts.com/css/general-sans');

@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	font-family: 'General Sans', sans-serif;
}

body {
	@apply bg-white;
}


.wrap {
	margin-left: auto;
	margin-right: auto;
	max-width: 700px;
	padding-left: 2em;
	padding-right: 2em;
}

.wrap:after {
	clear: both;
	content: '';
	display: block;
}